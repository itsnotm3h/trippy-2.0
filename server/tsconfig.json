{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    
    /* Allocation & Output */
    "rootDir": "src",           // ðŸ‘ˆ Tells TS: "All my code is here"
    "outDir": "dist",          // ðŸ‘ˆ Tells TS: "Put compiled JS here"
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],     // Ensures only files in src are compiled
  "exclude": ["node_modules", "dist"]
}
